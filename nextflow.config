nextflow.enable.dsl=2

executor {
    cpus = 120
}

conda.enabled = true

conda {
  useMamba = false
}

manifest {
  description = "pipeline for metagenome sequencing data classification pipeline implemented with nextflow"
  author = "Luigi Colin"
}

profiles {
  conda {
    process.conda = "$baseDir/environment.yaml"
  }  
}

timeline {
  enabled = true
  overwrite = true
  file = "$baseDir/results/timeline_test.html"
}